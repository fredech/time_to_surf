<div class="tab_container">
  <div class="leftbox">
    <nav>
      <a id="profile" class="active"><i class="fa fa-user"><p class="text2">Profile</p></i></a>
      <a id="payment"></a>
      <a id="subscription"></a>
      <a id="privacy"></a>
      <a id="settings"></a>
    </nav>
  </div>
  <div class="rightbox">
    <div class="profile">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <h1>Personal Infos<%= link_to " | Back", :back, class: "navbar-wagon-link" %></h1>
        <h2>Avatar</h2><%= cl_image_tag current_user.photo, class: "avatar-large" %>
        <h2>UserName</h2>
        <%= f.input :pseudo, label: false, input_html: { value: current_user.pseudo, class: 'form-input' } %>
        <h2>Email</h2>
        <%= f.input :email, label: false, input_html: { value: current_user.email, class: 'form-input' } %>
        <h2>Password </h2>
        <%= f.input :password, label: false, input_html: { value: "6 digits", class: 'form-input' } %>
        <h2>Password confirmation</h2>
        <%= f.input :password_confirmation, label: false, input_html: { value: "6 digits", class: 'form-input' } %>
        <h2>Password </h2>
        <%= f.input :current_password, label: false, input_html: { value: current_user.password, class: 'form-input' } %>
        <%= f.button :submit, "Update", class: "form-button", class: "navbar-wagon-link" %>
      <% end %>
    </div>
  </div>
</div>
