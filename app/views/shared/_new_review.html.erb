<div class="form">
  <%= simple_form_for [ surf_session, @review ] do |f| %>
  <%= f.input :content, label: "What did you think of this spot?", placeholder: 'Great waves!' %>
  <%= f.input :condition, input_html: { min: '0', max: '5', step: 'any' }, label: "How would you rate the condition of this beach? (/5)" %>
  <%= f.input :access, input_html: { min: '0', max: '5', step: 'any' }, label: "How would you rate the access to this beach? (/5)" %>
  <%= f.input :facilities, input_html: { min: '0', max: '5', step: 'any' }, label: "How would you rate the facilities at this beach? (/5)" %>
  <%= f.input :photo, input_html: { class: 'hidden', id: 'photo-input'}, label_html: { class: 'upload-photo'}, label: 'ðŸ“· Upload a photo' %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= cl_image_tag "", width: 300, class: "hidden", id: "photo-preview" %>
  <!-- <#%= f.submit "Create", class: "btn btn-success" %> -->
  <% end %>
</div>
